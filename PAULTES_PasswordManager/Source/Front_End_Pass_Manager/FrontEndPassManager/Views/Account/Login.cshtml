@model FrontEndPassManager.Models.UserModels

@{
    ViewData["Title"] = "Connexion";
}


<div class="row">
    <div class="offset-md-4 col-md-4">
        <center><h1>Connexion</h1></center>

        <hr />
        <form asp-action="Connect">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <center><label asp-for="User" class="control-label"></label></center>
                <center><input asp-for="User" class="form-control"  style="text-align:center;"/></center>
                <span asp-validation-for="User" class="text-danger"></span>
            </div>
            <div class="form-group">
                <center><label asp-for="Mdp" class="control-label"></label></center>
                <center><input type="password" asp-for="Mdp" class="form-control"  style="text-align:center;"/></center>
                <span asp-validation-for="Mdp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <center><input type="submit" value="Connexion" class="btn btn-success" />
                <a asp-action="Inscript" class="btn btn-primary">S'inscrire</a></center>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
